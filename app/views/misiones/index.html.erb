

    <div class="pagetitle">
      <h1>misiones</h1>
      <br/>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Inicio', "/" %></li>
          <li class="breadcrumb-item active">misiones</li>
        </ol>
      </nav>
    </div>

    <div class="row">
        <div class="col-6"></div>
        <% if acceso_a_accion_de_modulo?(current_usuario, "misiones", "crear") %>
        <div class="col-6" style="text-align: right;">
            <%= link_to 'Agregar mision', new_misione_path, {class: "btn btn-primary", style: "margin-top:-100px"} %>
        </div>
        <%end%>
    </div>
<section class="section">
        <div class="row">
          <div class="col-lg-12">
  
            <div class="card">
              <div class="card-body">
                <h5 class="card-title text-center" >Administrar misiones</h5>
  
                <!-- Table with stripped rows -->
                <table class="table datatable">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Descripcion</th>
                      <th scope="col">Fecha inicio</th>
                      <th scope="col">Fecha final</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @misiones.each do |misione| %>
                        <tr>
                            <th scope="row"><%= misione.id %></th>
                            <td><%= misione.nombre %></td>
                            <td><%= misione.descripcion %></td>
                            <td><%= misione.fecha_inicio %></td>
                            <td><%= misione.fecha_final %></td>
                            <td>
                                <%= link_to '', edit_misione_path(misione), {class: "bx bx-pencil", style: "color:blue;"} if acceso_a_accion_de_modulo?(current_usuario, "misiones", "actualizar") %>
                                <%= link_to '', misione, {method: :delete, class: "bx bx-trash", style: "color:red;", data: {confirm: "Estas seguro de eliminar esta mision?"}} if acceso_a_accion_de_modulo?(current_usuario, "misiones", "eliminar")%>
                                <%= link_to 'Ver empleados', misiones_empleados_path(mision: misione.id)%>
                            </td>
                        </tr>
                    <% end %>
                  </tbody>
                  
                </table>
                <!-- End Table with stripped rows -->
  
              </div>
            </div>
  
          </div>
        </div>
      </section>

    <script>
        $( document ).ready(function() {
            $("#misiones").removeClass("collapsed");
        });
    </script>