
      <section class="section container-fluid h-100 bg-light text-dark justify-content-center">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3 text-center">

            <div class="card">
                <div class="card-body">
                  <h5 class="card-title text-center">Iniciar sesion</h5>
    
                  <!-- Multi Columns Form -->
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-inline justify-content-center") do |f| %>

                    <div class="form-group">
                      <label for="email" class="form-label">Email</label>
                      <%= f.email_field :email, {class:"form-control", id:"email", required: true} %>
                    </div>
                    
                    <div class="form-group">
                      <label for="contrasena" class="form-label">Contrasena</label>
                      <%= f.password_field :password,{class: "form-control", id: "contrasena", autocomplete: "current-password", required: true} %>
                    </div>
    
                    <div class="form-group">
                      <%= f.submit "Ingresar", {class: "btn btn-primary"} %>
                    </div>
                  <% end %>
                </div>
              </div>
              <%= link_to 'Recuperar contrasena', new_usuario_password_path %>
          </div>
        </div>
      </section>