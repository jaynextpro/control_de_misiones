

    <div class="pagetitle">
      <h1>roles</h1>
      <br/>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Inicio', "/" %></li>
          <li class="breadcrumb-item active">roles</li>
        </ol>
      </nav>
    </div>

    <div class="row">
        <div class="col-6"></div>
        <% if acceso_a_accion_de_modulo?(current_usuario, "roles", "crear") %>
        <div class="col-6" style="text-align: right;">
            <%= link_to 'Agregar role', new_role_path, {class: "btn btn-primary", style: "margin-top:-100px"} %>
        </div>
        <%end%>
    </div>
<section class="section">
        <div class="row">
          <div class="col-lg-12">
  
            <div class="card">
              <div class="card-body">
                <h5 class="card-title text-center" >Administrar roles</h5>
  
                <!-- Table with stripped rows -->
                <table class="table datatable">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Descripcion</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @roles.each do |role| %>
                        <tr>
                            <th scope="row"><%= role.id %></th>
                            <td><%= role.nombre %></td>
                            <td><%= role.descripcion %></td>
                            <td>
                                <%= link_to '', edit_role_path(role), {class: "bx bx-pencil", style: "color:blue;"} if acceso_a_accion_de_modulo?(current_usuario, "roles", "actualizar") %>
                                <%= link_to '', role, {method: :delete, class: "bx bx-trash", style: "color:red;", data: {confirm: "Estas seguro de eliminar este role?"}} if acceso_a_accion_de_modulo?(current_usuario, "roles", "eliminar")%>
                            </td>
                        </tr>
                    <% end %>
                  </tbody>
                  
                </table>
                <!-- End Table with stripped rows -->
  
              </div>
            </div>
  
          </div>
        </div>
      </section>

    <script>
        $( document ).ready(function() {
            $("#roles").removeClass("collapsed");
        });
    </script>